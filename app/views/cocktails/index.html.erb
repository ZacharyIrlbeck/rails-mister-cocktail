<h1>The Total List of Cocktails</h1>
<div class="container">
  <ul>
    <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.present? %>
      <%= cl_image_tag cocktail.photo, width:400, height: 300, crop:  :fill %>
    <% end %>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
    <% end %>
  </ul>
</div>

<%= link_to "Create a cocktail!", new_cocktail_path %>
